<%= turbo_frame_tag dom_id(task) do %>
<div class="card mt-2">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <%= task.body %>
            <small><%= task.status %></small>
        </div>
        <div class="d-flex justify-content-between">
        <small>
            <%= time_ago_in_words(task.created_at) %>
        </small>
    </div>

</div>
<% end %>